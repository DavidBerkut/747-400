   <speed>240</speed>
  </max-flap-extension-speed>
  <max-flap-extension-speed>
   <flaps>0.667</flaps>
   <speed>230</speed>
  </max-flap-extension-speed>
  <max-flap-extension-speed>
   <flaps>0.833</flaps>
   <speed>205</speed>
  </max-flap-extension-speed>
  <max-flap-extension-speed>
   <flaps>1.000</flaps>
   <speed>180</speed>
  </max-flap-extension-speed>
  <max-gear-extension-speed>270</max-gear-extension-speed>
  <vne>600</vne>
  <max-positive-g>2.5</max-positive-g> 
 </limits>

