<!-- RAIN -->

	<animation>
		<type>select</type>
		<nopreview/>
		<object-name>side_windows_rain</object-name>
		<condition>
			<greater-than>
				<property>environment/metar/rain-norm</property>
				<value>0.01</value>
			</greater-than>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>side_windows</object-name>
		<condition>
			<less-than-equals>
				<property>environment/metar/rain-norm</property>
				<value>0.01</value>
			</less-than-equals>
		</condition>
	</animation>

	<animation>
		<type>material</type>
		<object-name>side_windows_rain</object-name>
		<transparency>
			<alpha-prop>environment/metar/rain-norm</alpha-prop>
				 <interpolation>
  <entry>
   <ind>0.0</ind>
   <dep>0.75</dep>
  </entry>
  <entry>
   <ind>1.0</ind>
   <dep>0</dep>
  </entry>
 </interpolation>
		</transparency>
	</animation>

	<animation>
		<type>textranslate</type>
		<object-name>side_windows_rain</object-name>
		<property>velocities/airspeed-kt</property>
		<factor>0.5</factor>
		<axis>
			<x>-1</x>
			<y>0.5</y>
			<z>0</z>
		</axis>
	</animation>

