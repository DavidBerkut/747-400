<!-- LANDING LIGHTS NOSE -->

<model>
	<path>Aircraft/747-400/Models/lights/light-cone.xml</path>
	<name>LandingLight.Taxi</name>
	<offsets>
		<x-m>-21.995</x-m>
		<y-m> -0.220</y-m>
		<z-m> -2.650</z-m>
	</offsets>
</model>

<model>
	<path>Aircraft/747-400/Models/lights/light-cone.xml</path>
	<name>LandingLight.Taxi</name>
	<offsets>
		<x-m>-21.995</x-m>
		<y-m>  0.220</y-m>
		<z-m> -2.650</z-m>
	</offsets>
</model>

<model>
	<path>Aircraft/747-400/Models/lights/light-cone.xml</path>
	<name>LandingLight.Turnoff.Left</name>
	<offsets>
		<x-m>-22.349</x-m>
		<y-m> -0.190</y-m>
		<z-m> -3.221</z-m>
		<heading-deg>65</heading-deg>       
	</offsets>
</model>

<model>
	<path>Aircraft/747-400/Models/lights/light-cone.xml</path>
	<name>LandingLight.Turnoff.Right</name>
	<offsets>
		<x-m>-22.349</x-m>
		<y-m>  0.190</y-m>
		<z-m> -3.221</z-m>
		<heading-deg>-65</heading-deg>       
	</offsets>
</model>

<animation> 
	<type>select</type> 
	<object-name>LandingLight.Taxi</object-name>
	<condition>
		<equals>
			<property>/controls/lighting/taxi-lights</property> 
			<value>1</value>
		</equals>
	</condition>
</animation> 

<animation> 
	<type>select</type> 
	<object-name>LandingLight.Turnoff.Left</object-name>
	<condition>
		<equals>
			<property>/controls/lighting/turnoff-light-l</property> 
			<value>1</value>
		</equals>
	</condition>
</animation> 

<animation> 
	<type>select</type> 
	<object-name>LandingLight.Turnoff.Right</object-name>
	<condition>
		<equals>
			<property>/controls/lighting/turnoff-light-r</property> 
			<value>1</value>
		</equals>
	</condition>
</animation> 

<animation> 
	<type>select</type> 
	<object-name>LandingLight.Turnoff.Left</object-name>
	<object-name>LandingLight.Turnoff.Right</object-name>
	<object-name>LandingLight.Taxi</object-name>
	<condition>
		<and>
			<equals>
				<property>/gear/gear/position-norm</property> 
				<value>1</value>
			</equals>
			<equals>
				<property>/gear/gear/wow</property> 
				<value>1</value>
			</equals>
		</and>
	</condition>
</animation> 

