<?xml version="1.0"?>


<PropertyList>
    <name>FMCtext</name>
    <w-base>864</w-base>
    <h-base>136</h-base>

    <layers>
	
        <layer>
	        <name>IAS/MACH display</name>
            <type>text</type>
            <font>arial_black</font>
            <point-size>18</point-size>
            <color>
                <red>0.7</red>
                <green>0.7</green>
                <blue>0.7</blue>
            </color>
            <chunks>
                <chunk>
                    <type>number-value</type>
                    <property>autopilot/settings/target-speed-kt</property>
                    <format>%-03.0f</format>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>-300</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>22</offset>
                </transformation>
            </transformations>
        </layer>
		
		<layer>
	        <name>HDG display</name>
            <type>text</type>
            <font>arial_black</font>
            <point-size>18</point-size>
            <color>
                <red>0.7</red>
                <green>0.7</green>
                <blue>0.7</blue>
            </color>
            <chunks>
                <chunk>
                    <type>number-value</type>
                    <property>autopilot/settings/true-heading-deg</property>
                    <format>%-03.0f</format>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>-140</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>22</offset>
                </transformation>
            </transformations>
        </layer>

        <layer>
            <name>VS display</name>
            <type>text</type>
            <font>arial_black</font>
            <point-size>18</point-size>
            <color>
                <red>0.7</red>
                <green>0.7</green>
                <blue>0.7</blue>
            </color>
            <chunks>
                <chunk>
                    <type>number-value</type>
                    <property>autopilot/settings/vertical-speed-fpm</property>
                    <format>%+05.0f</format>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>-25</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>22</offset>
                </transformation>
            </transformations>
        </layer>
		
		<layer>
            <name>ALT display</name>
            <type>text</type>
            <font>arial_black</font>
            <point-size>18</point-size>
            <color>
                <red>0.7</red>
                <green>0.7</green>
                <blue>0.7</blue>
            </color>
            <chunks>
                <chunk>
                    <type>number-value</type>
                    <property>autopilot/settings/target-altitude-ft</property>
                    <format>%05.0f</format>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>100</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>22</offset>
                </transformation>
            </transformations>
        </layer>

</layers>

</PropertyList>
