<!-- GEAR HANDLE -->

<animation>
 <type>rotate</type>
 <object-name>gear_handle</object-name>
 <property>controls/gear/gear-down</property>
 <factor>80</factor>
 <center>
  <x-m>0.632</x-m>
  <y-m>0.130</y-m>
  <z-m>0.619</z-m>
 </center>
 <axis>
  <x>0</x>
  <y>1</y>
  <z>0</z>
 </axis>
</animation>

<animation>
 <type>pick</type>
 <object-name>gear_handle</object-name>
 <action>
  <button>0</button>
  <repeatable>false</repeatable>
  <binding>
   <command>property-toggle</command>
   <property>controls/gear/gear-down</property>
  </binding>
 </action>
</animation>

