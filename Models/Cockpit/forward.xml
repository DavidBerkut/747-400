<PropertyList>

<path>forward2.ac</path>

<!-- PANEL LIGHTING -->

<animation>
	<type>material</type>
	<object-name>forward_panel</object-name>
	<emission>
		<red>0.5</red>
		<green>0.45</green>
		<blue>0.2</blue>
		<factor-prop>controls/lighting/panel-norm</factor-prop>
	</emission>
</animation>

<!-- PANELS -->

<model>
	<name>EICAS-upper</name>
	<path>Aircraft/747-400/Models/Cockpit/Instruments/EICAS/eicas_eng.xml</path>
	<offsets>
		<x-m>0.689</x-m>
		<y-m>0</y-m>
		<z-m>0.641</z-m>
		<pitch-deg>-22</pitch-deg>
	</offsets>
</model>
  
