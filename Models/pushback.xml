<PropertyList>
   	<path>pushback2.ac</path> 	<offsets>
		<z-m>0</z-m>
	</offsets>

        <animation>
		<type>select</type>
		<condition>
                    <and>
			<equals>
                            <property>fdm/jsbsim/systems/mule/linked</property>
                            <value>1</value>
                        </equals>
                    </and>
		</condition>
	</animation>

        <animation>
		<type>rotate</type>
                <property>orientation/pitch-deg</property>
                <factor>-1</factor>
		<center>
			<x-m>5</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>

        <animation>
		<type>rotate</type>
                <property>gear/gear[0]/steering-norm</property>
                <factor>-70</factor>
		<center>
			<x-m>5</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>1</z>
		</axis>
	</animation>

</PropertyList>
 
