<?xml version="1.0"?>
 
<PropertyList>

<fx>

  <gear>
   <name>gear</name>
   <mode>in-transit</mode>
   <path>Sounds/gear.wav</path>
   <property>/gear/gear[0]/position-norm</property>
   <pitch>
    <internal>dt_play</internal>
    <offset>1.0</offset>
    <factor>-0.001</factor>
   </pitch>
  </gear>

  <gear>
   <name>gear-lock</name>
   <path>Sounds/gear-lck.wav</path>
   <condition>
    <equals>
     <property>/gear/gear[0]/position-norm</property>
     <value>0</value>
    </equals>
   </condition>
  </gear>

  <gear>
   <name>gear-horn</name>
   <mode>looped</mode>
   <path>Sounds/gear-hrn.wav</path>
   <condition>
    <and>
     <equals>
      <property>/gear/gear[2]/wow</property>
      <value>0</value>
     </equals>
     <equals>
      <property>/controls/gear/gear-down</property>
      <value>0</value>
     </equals>
     <or>
      <and>
       <or>
        <equals>
         <property>/controls/engines/engine[0]/throttle</property>
         <value>0</value>
        </equals>
        <equals>
         <property>/controls/engines/engine[1]/throttle</property>
         <value>0</value>
        </equals>
        <equals>
         <property>/controls/engines/engine[2]/throttle</property>
         <value>0</value>
        </equals>
        <equals>
         <property>/controls/engines/engine[3]/throttle</property>
         <value>0</value>
        </equals>
       </or>
       <less-than>
        <property>/position/altitude-agl-ft</property>
        <value>800</value>
       </less-than>
      </and>
      <greater-than>
       <property>/controls/flight/flaps</property>
       <value>0.667</value>
      </greater-than>
     </or>
    </and>
   </condition>
  </gear>

  <squeal>
   <name>squeal</name>
   <path>Sounds/squeal.wav</path>
   <condition>
    <or>
     <property>/gear/gear[0]/wow</property>
     <property>/gear/gear[1]/wow</property>
     <property>/gear/gear[2]/wow</property>
     <property>/gear/gear[3]/wow</property>
     <property>/gear/gear[4]/wow</property>
    </or>
   </condition>
   <volume>
    <property>/velocities/speed-down-fps</property>
    <factor>0.05</factor>
   </volume>
   <volume>
    <property>/velocities/airspeed-kt</property>
    <factor>0.01</factor>
   </volume>
   <volume>
    <internal>dt_stop</internal>
    <factor>0.05</factor>
    <max>1.0</max>
   </volume>
   <pitch>
    <property>/velocities/airspeed-kt</property>
    <factor>0.0025</factor>
    <offset>1.2</offset>
   </pitch>
  </squeal>

  <flap>
   <name>flaps</name>
   <mode>in-transit</mode>
   <path>Sounds/flaps.wav</path>
   <property>/surface-positions/flap-pos-norm</property>
   <volume>
    <factor>0.45</factor>
   </volume>
  </flap>
  
  <config-flaps>
   <name>config-flaps</name>
   <mode>looped</mode>
   <path>Aircraft/747-400/Sounds/config-warning.wav</path>
    <condition>
	 <and>
	  <equals>
       <property>/gear/gear[0]/wow</property>
       <value>1</value>
      </equals>
	  <less-than>
 	   <property>/surface-positions/flap-pos-norm</property>
	   <value>0.33</value>
	  </less-than>
	  <greater-than>
	   <property>/controls/engines/engine[1]/throttle</property>
	   <value>0.5</value>
	  </greater-than>
	  <greater-than>
	   <property>/controls/engines/engine[2]/throttle</property>
	   <value>0.5</value>
	  </greater-than>
	 </and>
    </condition>
  </config-flaps>
  
  <config-park-brk>
   <name>config-park-brk</name>
   <mode>looped</mode>
   <path>Aircraft/747-400/Sounds/config-warning.wav</path>
    <condition>
	 <and>
	  <equals>
       <property>/controls/gear/brake-parking</property>
       <value>1</value>
      </equals>
	  <greater-than>
	   <property>/controls/engines/engine[1]/throttle</property>
	   <value>0.5</value>
	  </greater-than>
	  <greater-than>
	   <property>/controls/engines/engine[2]/throttle</property>
	   <value>0.5</value>
	  </greater-than>
	 </and>
    </condition>
  </config-park-brk>
  
  <overspeed>
   <name>overspeed</name>
   <mode>looped</mode>
   <path>Sounds/gear-hrn.wav</path>
    <condition>
   	 <greater-than>
	  <property>/velocities/mach</property>
	  <value>0.9</value>
	 </greater-than>
    </condition>
  </overspeed>
  
  <tcas-climb>
	<name>tcas-climb</name>
	<mode>looped</mode>
	<path>Sounds/gear-hrn.wav</path>
	<condition>
	 <equals>
      <property>/instrumentation/tcas/climb</property>
      <value>1</value>
	 </equals>
	</condition>
  </tcas-climb>
  
  <tcas-descend>
	<name>tcas-descend</name>
	<mode>looped</mode>
	<path>Sounds/gear-hrn.wav</path>
	<condition>
	 <equals>
	  <property>/instrumentation/tcas/descend</property>
	  <value>1</value>
	 </equals>
	</condition>
  </tcas-descend>

  <wind>
   <name>wind</name>
   <mode>looped</mode>
   <path>Sounds/wind-8khz.wav</path>
   <property>/velocities/airspeed-kt</property>
   <volume>
    <property>/position/altitude-ft</property>
    <factor>-0.000015</factor>
    <offset>1.0</offset>
    <min>0.1</min>
    <max>1.0</max>
   </volume>
   <volume>
     <property>/velocities/airspeed-kt</property>
     <factor>0.0015</factor>
     <min>0.03</min>
     <max>0.25</max>
   </volume>
   <pitch>
    <property>/velocities/airspeed-kt</property>
    <factor>0.01</factor>
    <offset>1.25</offset>
   </pitch>
  </wind>

  <stall>
