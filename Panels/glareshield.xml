<PropertyList>

<path>glareshield.ac</path>

<!-- WARNING/CAUTION -->

<animation>
 <type>material</type>
 <object-name>warning</object-name>
 <condition>
  <equals>
   <property>instrumentation/annunciators/master-warning</property> 
   <value>1</value>
  </equals>
 </condition>
 <emission>
  <red>1</red>
  <green>1</green>
  <blue>1</blue>
 </emission>
</animation>

<animation>
 <type>material</type>
 <object-name>warning</object-name>
 <condition>
  <equals>
   <property>instrumentation/annunciators/master-warning</property> 
   <value>0</value>
  </equals>
 </condition>
 <emission>
  <red>0</red>
  <green>0</green>
  <blue>0</blue>
 </emission>
</animation>

<animation>
 <type>material</type>
 <object-name>caution</object-name>
 <condition>
  <equals>
   <property>instrumentation/annunciators/master-caution</property> 
   <value>1</value>
  </equals>
 </condition>
 <emission>
  <red>1</red>
  <green>1</green>
  <blue>1</blue>
 </emission>
</animation>

<animation>
 <type>material</type>
 <object-name>caution</object-name>
 <condition>
  <equals>
   <property>instrumentation/annunciators/master-caution</property> 
   <value>0</value>
  </equals>
 </condition>
