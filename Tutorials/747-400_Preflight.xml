<PropertyList>
    <name>Preflight</name>
    <description>
You just stepped through the cockpit door of the cold and dark 747-400, the most magnificent passenger aircraft on the planet. You are the captain on this flight and will direct all flight operations.
    </description>
    <audio-dir>Aircraft/747-400/tutorial</audio-dir>
    <timeofday>noon</timeofday>
    <presets>
      <airport-id>KSFO</airport-id>
      <on-ground>1</on-ground>
      <runway>28R</runway>
      <altitude-ft>0</altitude-ft>
      <latitude-deg>37.61838</latitude-deg>
      <longitude-deg>-122.39193</longitude-deg>
      <heading-deg>0</heading-deg>
      <airspeed-kt>0</airspeed-kt>
      <glideslope-deg>0</glideslope-deg>
      <offset-azimuth>0</offset-azimuth>
      <offset-distance>0</offset-distance>
    </presets>

    <init>
      <set>
        <property>/controls/gear/brake-parking</property>
        <value>1</value>
      </set>
      <set>
        <property>/controls/flight/flaps</property>
        <value>0.0</value>
      </set>
      <set>
        <property>/controls/electric/battery-switch</property>
        <value>0.0</value>
      </set>
      <set>
        <property>/controls/engines/engine/magnetos</property>
        <value>0</value>
      </set>
      <set>
        <property>/controls/engines/engine/throttle</property>
        <value>0</value>
      </set>
      <set>
        <property>/engines/engine/running</property>
        <value>false</value>
      </set>
      <set>
        <property>/instrumentation/adf/frequencies/selected-khz</property>
        <value>340</value>
      </set>
      <set>
        <property>/environment/weather-scenario</property>
        <value>Fair weather</value>
      </set>
      <set>
        <property>/controls/flight/elevator-trim</property>
        <value>0.17</value>
      </set>
    </init>

    <step>
      <message>Turn ON the BATTERY switch at the overhead panel.</message>
      <exit>
			
        <condition>
				
          <property>/controls/electric/battery-switch</property>
			
        </condition>
		
      </exit>
    </step>

    <step>
      <message>Set all four ELEC ENG CONTROL switches to NORM.</message>
    </step>

    <step>
      <message>Set the BUS TIE switches to AUTO.</message>
    </step>

    <step>
      <message>Set the GEN CONT (generator control) switches ON.</message>
      <exit>
			
        <condition>
				
          <property>/controls/electric/engine</property>
			
        </condition>
		
        <condition>
				
          <property>/controls/electric/engine[1]/generator</property>
			
        </condition>
		
        <condition>
				
          <property>/controls/electric/engine[2]/generator</property>
			
        </condition>
		
        <condition>
				
          <property>/controls/electric/engine[3]/generator</property>
			
        </condition>
		
      </exit>
    </step>

    <step>
      <message>Ensure that the Hydraulic DEMAND pump switches are set to OFF.</message>
    </step>

    <step>
      <message>Turn the ENGINE hydraulic pump selectors ON.</message>
      <exit>
			
        <condition>
				
          <property>/controls/hydraulic/system/engine-pump</property>
			
        </condition>
		
        <condition>
				
          <property>/controls/hydraulic/system[1]/engine-pump</property>
			
        </condition>
		
        <condition>
				
          <property>/controls/hydraulic/system[2]/engine-pump</property>
			
        </condition>
		
        <condition>
				
          <property>/controls/hydraulic/system[3]/engine-pump</property>
			
        </condition>
		
      </exit>
    </step>

    <step>
      <message>Turn on EXT PWR 1 and, if available, EXT PWR 2.</message>
      <exit>
            
        <condition>
                
                    
          <equals>
                        
            <property>/controls/electric/external-power</property>
                        
            <value>true</value>
                    
          </equals>
                   
        </condition>
        
      </exit>
 
    </step>

    <step>
      <message>Turn ON UTILITY L and R.</message>
    </step>

    <step>
      <message>Turn on the NAV lights.</message>
      <exit>
            
        <condition>
                
                    
          <equals>
                        
            <property>/controls/lighting/nav-lights</property>
                        
            <value>true</value>
                    
          </equals>
                   
        </condition>
        
      </exit>
 
    </step>

    <step>
      <message>Turn on the LOGO lights.</message>
<exit>
            
<condition>
                
                    
<equals>
                        
<property>/controls/lighting/logo-lights</property>
                        
<value>true</value>
                    
</equals>
                   
</condition>
        
</exit>
 
    </step>

    <step>
      <message>Turn on the WING lights.</message>
    </step>

    <step>
      <message>ARM the emergency lights.</message>
    </step>

    <step>
      <message>Ensure all control surfaces are properly positioned.</message>
      <exit>
            
        <condition>
                
                    
          <equals>
                        
            <property>/controls/flight/flaps</property>
                        
            <value>0</value>
                    
          </equals>
                   
        </condition>
        
      </exit>
 
    </step>

    <step>
      <message>Set each of the three IRS switches from OFF to NAV to ALIGN.</message>
    </step>

    <step>
      <message>Turn on all fuel XFEED (crossfeed) switches.</message>
    </step>

    <step>
      <message>Ensure all fuel pumps are OFF.</message>
	<exit>
            
	<condition>
                
                    
		<equals>
                        
			<property>/controls/engines/engine/fuel-pomp</property>
                        
			<value>true</value>
                    
		</equals>
     
		<equals>
                        
			<property>/controls/engines/engine[1]/fuel-pomp</property>
                        
			<value>true</value>
                    
		</equals>
 
		<equals>
                        
			<property>/controls/engines/engine[2]/fuel-pomp</property>
                        
			<value>true</value>
                    
		</equals>
 
		<equals>
                        
			<property>/controls/engines/engine[3]/fuel-pomp</property>
                        
			<value>true</value>
                    
		</equals>
               
	</condition>
        
	</exit>
 
    </step>

    <step>
      <message>Disable NACELLE and WING ANTI-ICE.</message>
    </step>

    <step>
      <message>Enable WINDOW HEAT.</message>
    </step>

    <step>
      <message>Turn YAW DAMPERS ON.</message>
    </step>

    <step>
      <message>Rotate the APU switch to START.</message>
    </step>

    <step>
      <message>Turn ON APU GEN 1 and APU GEN 2.</message>
	<exit>
            
	<condition>
                
                    
		<equals>
                        
			<property>/controls/electric/APU-generator</property>
                        
			<value>true</value>
                    
		</equals>
     
	</condition>
        
	</exit>
 
    </step>

    <step>
      <message>Ensure that PASS TEMP and FLT DECK temperature controls are set to AUTO.</message>
    </step>

    <step>
      <message>Make sure TRIM AIR is ON.</message>
    </step>

    <step>
      <message>Turn ON UPR and LWR RECIRC.</message>
    </step>

    <step>
      <message>Turn ON the GASPER.</message>
    </step>

    <step>
      <message>Turn all three PACK switches to NORM.</message>
    </step>

    <step>
      <message>Ensure the ISLN switches are open.</message>
    </step>

    <step>
      <message>Turn ON APU Bleed.</message>
    </step>

    <step>
      <message>Turn ENGINE BLEED ON for all four engines.</message>
	<exit>
            
	<condition>
                
                    
		<equals>
                        
			<property>/controls/pneumatic/engine/bleed</property>
                        
			<value>true</value>
                    
		</equals>
     
		<equals>
                        
			<property>/controls/pneumatic/engine[1]/bleed</property>
                        
			<value>true</value>
                    
		</equals>
   
		<equals>
                        
			<property>/controls/pneumatic/engine[2]/bleed</property>
                        
			<value>true</value>
                    
		</equals>
   
		<equals>
                        
			<property>/controls/pneumatic/engine[3]/bleed</property>
                        
			<value>true</value>
                    
		</equals>
   
	</condition>
        
	</exit>
 
    </step>

    <step>
      <message>Turn the F/D (Flight Director) ON.</message>
    </step>

    <step>
      <message>Enter V2 speed into the IAS/MACH indicator.</message>
    </step>

    <step>
      <message>Set HDG to 249.</message>
    </step>

    <step>
      <message>Set ALT to 10000.</message>
	<exit>
            
	<condition>
                
                    
		<equals>
                        
			<property>/autopilot/settings/target-altitude-ft</property>
                        
			<value>10000</value>
                    
		</equals>
     
	</condition>
        
	</exit>
 
    </step>

    <step>
      <message>Ensure the autopilot DISENGAGE bar is UP.</message>
<exit>
            
<condition>
                
                    
<equals>
                        
<property>/autopilot/locks/AoA-lock</property>
                        
<value></value>
                    
</equals>
     
<equals>
                        
<property>/autopilot/locks/altitude</property>
                           
<value></value>
                    
</equals>
 
<equals>
                        
<property>/autopilot/locks/auto-flap-control</property>
   
                        
<value></value>
                    
</equals>
 
<equals>
                        
<property>/autopilot/locks/heading</property>
                          
<value></value>
                    
</equals>
               
<equals>
                        
<property>/autopilot/locks/passive-mode</property>
                          
<value></value>
                    
</equals>

<equals>
                        
<property>/autopilot/locks/rudder-control</property>
                          
<value></value>
                    
</equals>

<equals>
                        
<property>/autopilot/locks/speed</property>
                          
<value></value>
                    
</equals>

</condition>
        
</exit>
 
    </step>

    <step>
      <message>Ensure that fuel control switches are set at CUTOFF</message>
    </step>

    <step>
      <message>Set trim</message>
    </step>

    <step>
      <message>Set AUTOBRAKES to RTO.</message>
    </step>

    <step>
      <message>Turn the TCAS switch from XPDR to STBY/TEST.</message>
    </step>

    <step>
      <message>Move the TCAS switch to TA/RA.</message>
    </step>

    <step>
      <message>Set the TCAS biasing mode switch to ABOVE.</message>
    </step>

    <step>
      <message>Ensure that NO SMOKING and SEATBELTS selectors are set to AUTO.</message>
    </step>

    <step>
      <message>Lock the FLT DK DOOR.</message>
    </step>

    <step>
      <message>Press the TFC button on the EFIS (Electronic Flight Information System) Mode Control Panel.</message>
    </step>

    <step>
      <message>Turn ON MAIN and OVRD fuel pumps for each tank that contains fuel.</message>
    </step>

    <end>
      <message>Continue with the Pushback and Start tutorial.</message>
    </end>
</PropertyList>
