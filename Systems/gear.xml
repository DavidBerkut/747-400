<?xml version="1.0"?>

<!-- # GEAR system for BOEING 747-400  #
     # by Gijs de Rooy			   # -->

<system name="gear">
    
    <channel name="gear">

	<!-- GEAR 1 -->

        <summer name="gear/unit[0]/tyre-speed-dif-switch">
            <input>-velocities/u-aero-fps</input>
            <input>gear/unit[0]/wheel-speed-fps</input>
            <output>gear/unit[0]/tyre-speed-dif</output>
        </summer>

        <switch name="/gear/gear[0]/tyre-smoke-switch">
			<default value="0"/>
            <test  logic="AND" value="1">
                gear/unit[0]/tyre-speed-dif lt -2
                gear/unit[0]/WOW == 1
            </test>
			<output>/gear/gear[0]/tyre-smoke</output>
		</switch>

	<!-- GEAR 2 -->

        <summer name="gear/unit[1]/tyre-speed-dif-switch">
            <input>-velocities/u-aero-fps</input>
            <input>gear/unit[1]/wheel-speed-fps</input>
            <output>gear/unit[1]/tyre-speed-dif</output>
        </summer>

        <switch name="/gear/gear[1]/tyre-smoke-switch">
			<default value="0"/>
            <test  logic="AND" value="1">
                gear/unit[1]/tyre-speed-dif lt -2
                gear/unit[1]/WOW == 1
            </test>
			<output>/gear/gear[1]/tyre-smoke</output>
		</switch>
		
		<switch name="/gear/gear[1]/abnormal-braking-switch">
			<test  logic="AND" value="0">
				/controls/gear/brake-left == 0
				/gear/gear[1]/abnormal-braking lt 1
            </test>
            <test  logic="AND" value="1">
                gear/unit[1]/wheel-speed-fps gt 50
                gear/unit[1]/WOW == 1
				/controls/gear/brake-left gt 0.5
            </test>
			<test  logic="AND" value="1">
                /gear/gear[1]/abnormal-braking == 1
            </test>
			<output>/gear/gear[1]/abnormal-braking</output>
		</switch>
	   
	    <kinematic name="/gear/gear[1]/abnormal-temperature">
            <input>/gear/gear[1]/abnormal-braking</input>
            <traverse>
                <setting>
					<position>0</position>
					<time>0</time>
                </setting>
                <setting>
					<position>1</position>
					<time>10</time>
				</setting>
            </traverse>
        </kinematic>

